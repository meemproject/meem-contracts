{
	"name": "@meemproject/meem-gate-token",
	"private": true,
	"version": "1.0.1",
	"description": "Meem Gate",
	"author": "Meem Project",
	"homepage": "https://meem.wtf",
	"scripts": {
		"build": "yarn build:sol && yarn build:ts",
		"clean": "rm -rf cache artifacts abi dist typechain",
		"build:ts": "tsc -p .",
		"build:sol": "npx hardhat compile",
		"hardhat": "npx hardhat",
		"accounts": "npx hardhat accounts",
		"deploy": "npx hardhat deploy",
		"deployURI": "npx hardhat deployURI",
		"upgradeContract": "npx hardhat upgradeContract",
		"test": "npx hardhat test --network hardhat",
		"coverage": "npx hardhat coverage",
		"network": "npx hardhat node",
		"console": "npx hardhat console",
		"watch": "concurrently -r --kill-others \"chokidar 'tasks/**/*.ts' 'hardhat.config.ts' -c 'yarn build:ts'\" \"chokidar 'contracts/**/*.sol' -c 'yarn build:sol'\"",
		"verify": "npx hardhat verify",
		"lint": "eslint --max-warnings=0 --ext=.ts,.tsx . && tsc -p . --noEmit",
		"lint:fix": "eslint --fix --ext=.ts,.tsx .",
		"release": "semantic-release"
	},
	"devDependencies": {
		"@float-capital/solidity-coverage": "^0.7.17",
		"@kengoldfarb/semantic-release-config": "^1.0.3",
		"@nomiclabs/hardhat-ethers": "^2.0.2",
		"@nomiclabs/hardhat-etherscan": "^2.1.2",
		"@nomiclabs/hardhat-waffle": "^2.0.1",
		"@openzeppelin/contracts": "^4.1.0",
		"@openzeppelin/contracts-upgradeable": "^4.1.0",
		"@openzeppelin/hardhat-upgrades": "^1.8.2",
		"@typechain/ethers-v5": "^6.0.1",
		"@types/chai": "^4.2.22",
		"@types/chai-as-promised": "^7.1.4",
		"@types/express": "^4.17.11",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.10.2",
		"@types/prompt": "^1.1.0",
		"base64-sol": "^1.0.1",
		"chai": "^4.3.4",
		"chai-as-promised": "^7.1.1",
		"chokidar-cli": "^3.0.0",
		"concurrently": "^6.2.1",
		"eslint": "^7.32.0",
		"eslint-config-kengoldfarb": "^1.3.0",
		"ethereum-waffle": "^3.3.0",
		"ethers": "^5.0.32",
		"hardhat": "^2.1.1",
		"hardhat-abi-exporter": "^2.2.1",
		"hardhat-contract-sizer": "^2.1.1",
		"hardhat-gas-reporter": "^1.0.4",
		"hardhat-typechain": "^0.3.5",
		"prettier": "^2.4.1",
		"prettier-plugin-solidity": "^1.0.0-beta.12",
		"prompt": "^1.1.0",
		"ts-node": "^10.0.0",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"dotenv": "^10.0.0"
	}
}
